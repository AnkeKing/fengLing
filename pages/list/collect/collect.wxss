/* pages/list/collect/collect.wxss */
.collect{
    width: 750rpx;
    display: flex;
    flex-direction: column;align-items: center;
    position: relative;
}
.topCon{
    width: 100%;
    position: relative;
}
.nav{
    /* height: 105rpx; */
    width: 750rpx;
    background: #f84134;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 35rpx;
    color: #fefefe;
    font-weight: 400;
    position: fixed;
    z-index: 999
}
.leftImg{
    height: 35rpx;
    width: 30rpx;
    padding: 20rpx;
    position: absolute;
    left: 34rpx;
    transform: translateX(-50%)
}
.search{
    width: 750rpx;
    height: 100rpx;
    /* background: red; */
    display: flex;
    align-items: center;
    justify-content: center;
    background: #f2f2f5;
    position: fixed;
    left: 0;
    z-index: 3
}
.search_con{
    width: 585rpx;
    display: flex;
    justify-content: space-between;
    align-items: center;
    background: #ffffff;
    border-radius: 10rpx 
}
.searchImg{
    height: 30rpx;
    width: 30rpx;
    margin-left: 20rpx
}
.searchInput{
    width: 517rpx;
    font-size: 28rpx;
    padding: 10rpx 0rpx
}
.placeholder{
    font-size: 28rpx;
    color: #cecece
}
.btn{
    background: transparent;
    font-size: 28rpx;
    color: #ff2426;
    margin-left: 45rpx;
    margin-right: 0;
    padding: 0;

}
button::after {
  border: none;
}
.con{
    width: 750rpx;
    display: flex;
    flex-direction: column;
    align-items: center;
    margin-top: 225rpx
}
.search_no_data{
    height: 150rpx;
    width: 180rpx
}
.con_text{
    font-size: 24rpx;
    color: #868686;
    margin-top: 60rpx
}
.list{
    width: 750rpx;
    flex: 1;
    box-sizing: border-box;
    padding: 0rpx 22rpx;
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    flex-wrap: wrap;
    margin-bottom: 96rpx;
}
.item_one{
    width: 342rpx;
    border: 2rpx solid #f1f1f2;
    margin-top: 20rpx;
    position: relative
}
.commodityImg{
    width: 342rpx;
    height: 340rpx;
    background: red
}
.listZhong{
    width: 342rpx;
    display: flex;
    justify-content: flex-start;
    align-items: center;
    padding: 17rpx 0rpx 38rpx;
}
.self_operated{
    height: 23rpx;
    width: 50rpx;
    border-radius: 23rpx;
    background: #f73934;
    font-size: 15rpx;
    color: #ffffff;
    display: flex;
    align-items: center;
    justify-content: center
}
.commodityName{
    flex: 1;
    overflow: hidden;
    text-overflow:ellipsis;
    white-space: nowrap;
    font-size: 28rpx;
    color: #313131;
    margin-left: 8rpx
}
.price{
    color: #fb1d1a;
    font-size: 24rpx;
    font-weight: 700;
    margin-bottom: 24rpx;
    margin-left: 20rpx
}
.addCart{
    height: 70rpx;
    width: 70rpx;
    border-radius: 50%;
    background: #333333;
    display: flex;
    align-items: center;
    justify-content: center;
    position: absolute;
    bottom: 10rpx;
    right: 23rpx
}
.car{
    height: 32rpx;
    width: 32rpx
}
.checked{
    height: 35rpx;
    width: 35rpx;
    position: absolute;
    top: 18rpx;
    right: 30rpx;
    background: #ffffff;
    border-radius: 50%
}
.shopCon{
    width: 100%;
    box-sizing: border-box;
    padding-right: 28rpx;
    display: flex;
    align-items: center;
    justify-content: flex-end;
    position: fixed;
    bottom: 40rpx;
    left: 0; 
}
.shopingcar{
    height: 90rpx;
    width: 90rpx;
    background: #ffffff;
    border-radius: 50%;
    border: 2rpx solid #cecece;
    display: flex;
    align-items: center;
    justify-content: center;
    position: relative;
}
.num{
    min-height: 30rpx;
    min-width: 30rpx; 
    border-radius: 50%;
    background: #f73934;
    font-size: 16rpx;
    color: #ffffff;
    display: flex;
    align-items: center;
    justify-content: center;
    position: absolute;
    right: -4rpx;
    top: -4rpx;
}
.shopingcarImg{
    height: 60rpx;
    width: 60rpx
}
.bottom{
    height: 96rpx;
    width: 750rpx;
    background: #ffffff;
    position: fixed;
    bottom: 0;
    left: 0;
    display: flex;
    align-items: center;
    justify-content: space-around;
}
.bottom-left{
    height: 96rpx;
    width: 564rpx;
    display: flex;
    align-items: center;
    padding-left: 18rpx;
    box-sizing: border-box; 
}
.left_check{
    height: 44rpx;
    width: 44rpx;
    margin-right: 12rpx
}
.allCheck{
    font-size: 28rpx;
    color: #000000;
}
.bottom_btn{
    height: 96rpx;
    width: 186rpx;
    /* background: #f73936; */
    border-radius: 0;
    font-size: 28rpx;
    color: #ffffff;
    display: flex;
    align-items: center;
    justify-content: center
}
