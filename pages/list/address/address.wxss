/* pages/list/address/address.wxss */
.address{
    width: 750rpx;
    height: 100vh;
    background: #f2f2f5;
    display: flex;
    flex-direction: column;
    align-items: center
}
.nav{
    height: 105rpx;
    width: 750rpx;
    background: #f84134;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 35rpx;
    color: #fefefe;
    font-weight: 400;
    position: relative
}
.leftImg{
    height: 35rpx;
    width: 30rpx;
    padding: 20rpx;
    position: absolute;
    left: 34rpx;
    transform: translateX(-50%)
}
.con{
    width: 750rpx;
    display: flex;
    flex-direction: column;
    align-items: center;
    margin-top: 225rpx
}
.addressImg{
    height: 97rpx;
    width: 97rpx;
}
.conText{
    font-size: 28rpx;
    color: #161617;
    margin-top: 60rpx
}
.list{
    width: 750rpx;
    margin-top: 20rpx;
    display: flex;
    flex-direction: column;

}
.touch-item{
    width: 750rpx;
    background: #ffffff;
    display: flex;
    align-items: center;
    justify-content: space-between;
    position: relative;
}
.touch-item::after{
    content: "";
    height: 2rpx;
    width: 750rpx;
    background: #f2f2f5;
    position: absolute;
    bottom: 0;
    left: 0;
    transform: scale(1,0.5)
}
.itemm_left{
    flex: 1;
    padding-left:38rpx;
}
.itemm_left_top{
    font-size: 26rpx;
    font-weight: 600;
}
.itemm_left_bottom{
    font-size: 23rpx;
    padding-top: 16rpx ;
    color: #575757;
}
.changeAddress{
    height: 31rpx;
    width: 32rpx;
    padding: 48rpx 27rpx;
}
.touch-item {
  font-size: 14px;
  display: flex;
  justify-content: space-between;
  width: 100%;
  overflow: hidden
}
.content {
  width: 750rpx;
  margin-right:0;
  -webkit-transition: all 0.4s;
  transition: all 0.4s;
  -webkit-transform: translateX(90px);
  transform: translateX(90px);
  margin-left: -90px;
  display: flex;
  align-items: center
}
.del {
  background-color: orangered;
  width: 90px;
  padding: 46rpx 0rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  color: #fff;
  -webkit-transform: translateX(90px);
  transform: translateX(90px);
  -webkit-transition: all 0.4s;
  transition: all 0.4s;
}
.touch-move-active .content,
.touch-move-active .del {
  -webkit-transform: translateX(0);
  transform: translateX(0);
}
.newAddress{
    width: 750rpx;
    height: 87rpx;
    background: #f84134;
    border-radius: 0;
    color: #ffffff;
    position: fixed;
    bottom: 0
}
.newAddress::after{
    border: none
}