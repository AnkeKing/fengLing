/* pages/acknowledgement/acknowledgement.wxss */
.pages{
    width:100%;
    height:100%;
    background-color:#f1f0f6;
}
.custom{
    position: fixed;
    width: 100%;
    top: 0;
    left: 0;
    height: 90rpx;
    line-height:90rpx;
    text-align:center;
    background: #f8562f;
    z-index: 999;
}
.custom text{
    color: #fff;
    font-size: 34rpx;
    font-weight: 500;
    max-width: 280rpx;
}
.ic_left{
    width:30rpx;
    height:36rpx;
    position:absolute;
    left:20rpx;
    top:75rpx;
}
.content{
    width:100%;
    height:100vh;
}
.dispatching{
    width:100%;
    height:100rpx;
    margin-top:130rpx;
    display: flex;
    align-items: center;
    background-color:#fff;
    justify-content: space-between;
    border-bottom:1rpx solid #f2f2f2;
}
.way{
    font-size:30rpx;
    margin-left:28rpx;
}
.nav {
    display: flex;
    align-items: center;
}
.default {
    border-right: 1px solid gainsboro;
    color: #000;
    font-size: 28rpx;
    border:1rpx solid #d3d3d3;
    padding:6rpx 10rpx;
    margin-right:20rpx;
    border-radius: 8rpx;
    letter-spacing: 3rpx;
}
.red {
    color: #fc5558;
    /* font-weight: bold; */
    font-size: 28rpx;
    border:1rpx solid #fc5558;
    padding:6rpx 10rpx;
    border-radius: 8rpx;
    margin-right:20rpx;
    letter-spacing: 3rpx;
}
.show {
    display: block;
}
.hidden {
    display: none;
}
.tap-content{
    width:100%;
    height:auto;
    margin-bottom:15rpx;
    border-bottom:1rpx solid #f2f2f2;
}
.time{
    width:100%;
    height:70rpx;
    line-height:70rpx;
    padding-left:26rpx;
    font-size:26rpx;
    background-color:#fff;
    margin-bottom:16rpx;
}
.address{
    width:100%;
    height:130rpx;
    background-color:#fff;
    font-size:30rpx;
    line-height:130rpx;
    font-weight:bold;
    text-align:center;
    margin-bottom:15rpx;
}
.store{
    width:100%;
    height:160rpx;
    padding-left:30rpx;
    border-bottom:1rpx solid #f2f2f2;
    background-color:#fff;
}
.store-xizang{
    font-size:30rpx;
    font-weight:bold;
    padding-top:12rpx;
}
.time1{
    font-size:30rpx;
    margin-top:12rpx;
}
.address1{
    font-size:30rpx;
    margin-top:8rpx;
}
.box{
    width:100%;
    height:90rpx;
    border-bottom:1rpx solid #f2f2f2;
    background-color:#fff;
    display:flex;
    align-items: center;
    justify-content: space-between;
}
.person{
    font-size:30rpx;
    margin-left:30rpx;
}
.input{
    width:234rpx;
    font-size:30rpx;
