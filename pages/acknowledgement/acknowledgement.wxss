    margin-bottom:15rpx;
}
.commodity-box{
    width:100%;
    height:80rpx;
    display:flex;
    align-items: center;
    justify-content: center;
    border-bottom:1rpx solid #f2f2f2;
}
.image{
    width:40rpx;
    height:40rpx;
    margin-right:20rpx;
}
.store1{
    font-size:30rpx;
    font-weight:bold;
}
.detail{
    height:266rpx;
    width:100%; 
