<view class="box">
  <view class="tit" style="padding-top:{{statusBarHeight}}px">
    <view class="top">
      <view class="left">
        <text class="co" bindtap='aa'>{{mm}}</text>
      </view>
      <view class="right">
        <image src="../../img/home_03.png" class="img" bindtap='search'></image>
      </view>
    </view>
    <view class="bottom">
      <view class="bottom-left">
        <image src="../../img/aa.jpg" class="one"></image>
