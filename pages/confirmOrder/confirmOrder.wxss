/* pages/confirmOrder/confirmOrder.wxss */
.delivery-type{
    width: 100vw;
    height: 89rpx;
    display: flex;
}
.public-type{
    width: 50%;
    position: relative;
    font-size: 28rpx;
    font-weight: bold;
    color: #666666;
    display: flex;
    justify-content: center;
    align-items: center;
}
.public-type:nth-of-type(1)::after{
    position: absolute;
    content: "";
    bottom: 0rpx;
    right: 0rpx;
    width: 1rpx;
    height: 89rpx;
    background:#E8E8E8;
    transition: scaleY(2.5)
}
.active-type{
    color: #333333;
    font-weight: 100;
}
.active-hr{
    position: absolute;
    bottom: 0rpx;
    left: 0rpx;
    width: 100%;
    height: 1rpx;
    background:#E8E8E8;
    transition: scaleX(0.5)
}