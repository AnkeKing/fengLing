<view class="pages">
    <view class="custom flex_center" style="padding-top:{{statusBarHeight*2}}rpx">
        <image src="../../img/ic_left_white.png" class="image"></image>
        <text>订单详情</text>
    </view>
    <!-- 待付款 -->
    <view class="backgd">
        <view class="payment">
            <image src="../../img/ic-wait-white.png" class="image2"></image>
            <view class="dai">待付款</view>
        </view>
        <view class="settimer">
            <view class="timer">剩余时间:{{countDownNum}}</view>
            <view class="auto">自动取消</view>
        </view>
    </view>

    <!-- 门店信息 -->
    <view class="store">
        <view class="address">
            <view class="display">
                <image src="../../img/ic-receiveGoodLocation.png" class="receive"></image>
                <image src='../../img/ic_self_lifting.png' class="self"></image>
