/* pages/groupBying/groupBying.wxss */
page{
    background: #F2F1F6;
}
.scoll-box{
    display: flex;
    flex-direction: column;
    align-items: center;
}
.main-box{
    width: 94%;
    margin-top: 28rpx;
    box-sizing: border-box;
    box-shadow: 2rpx 3rpx 17rpx 3rpx rgba(0, 0, 0, 0.1);
    border-radius: 4px;
}
.time-box{
    width: 100%;
    border-top-left-radius: 4px;
    border-top-right-radius: 4px;
    background: linear-gradient(to right, #7E3AF0 , #FD8865);
    padding: 30rpx 26rpx 26rpx 26rpx;
    display: flex;
    flex-direction: column;
    box-sizing: border-box;
}
.time-box .title{
    font-size: 34rpx;
    color: #ffffff;
}
.stop-time{
    color: #BAD9FF;
    font-size: 30rpx;
    margin-top: 14rpx;
}
.shop-box{
    width: 100%;
    padding: 24rpx 0 24rpx 24rpx;
    background: #FDF7E7;
    display: flex;
    flex-wrap: wrap;
    box-sizing: border-box;
}
.shop-li{
    width: 200rpx;
    height: 200rpx;
    position: relative;
    margin:0 10rpx 24rpx 0;
}
.shop-img{
    width: 100%;
    height: 200rpx;
}
.red-shade{
    width: 100%;
    height: 44rpx;
    background: rgba(251,64,49, 0.6);
    display: flex;
    justify-content: center;
    align-items: center;
    position: absolute;
    bottom: 0px;
    left: 0px;
    z-index: 9;
}
.price{
    color: #ffffff;
    font-size: 30rpx;
}
.person-count{
    width: 100%;
    height: 94rpx;
    background: #ffffff;
    border-bottom-left-radius: 4px;
    border-bottom-right-radius: 4px;
    display: flex;
    align-items: center;
    padding-left: 26rpx;
    box-sizing: border-box;
    position: relative;
}
.count{
    font-size: 28rpx;
    color: #575757;
}
.share-btn{
    height: 54rpx;
    border-top-left-radius: 35px;
    border-bottom-left-radius: 35px;
    background: linear-gradient(to right, #FF7500 , #EB3900);
    line-height:54rpx;
    font-size: 30rpx;
    color: #ffffff;
    position: absolute;
    right: 0rpx;
    top: 20rpx
}
.btn-img{
    width:35rpx;
    height:30rpx;
    margin-left: 20rpx;
}